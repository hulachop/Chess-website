<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/styles.css">
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="scripts/deckEditor.js" defer></script>
    <title>Deck</title>
</head>
<body style="background-color: rgb(60, 60, 255)">
    <%- include('partials/header.ejs'); %>
    <div class="container blue lighten-2 z-depth-4">
        <div class="row">
            <div class="col s9">
                <div style="height: 3vh;"></div>
                <div class="row" id="card-container">
                </div>
            </div>
            <form class="col s3" id="deckedit-form" action="/deck" method="POST">
                <input type="text" name="name" id="deck-name" value="deck name">
                <input type="text" name="token" class="token hide">
                <input type="text" name="did" class="hide">
                <input type="text" name="data" class="hide">
                <div class="blue darken-1 z-depth-2" style="padding: 10px;">
                    <ul class="collection" id="deck">
                    </ul>
                    <div class="row">
                        <div class="grey lighten-1">
                            <div class="center green" style="width: calc((7/15)*100%); height: 100%;" id="deck-cost">7/15</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 center">
                            <button type="submit" class="btn green darken-1" style="width: 100%;">save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('partials/firebase.ejs'); %>
</body>
</html>